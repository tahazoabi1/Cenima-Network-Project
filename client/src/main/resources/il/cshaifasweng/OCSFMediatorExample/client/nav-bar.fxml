<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.NavBarController">
    <children>
        <HBox spacing="20" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <Button fx:id="btnHome" onAction="#navigateToHome" text="Home" />
            <Button fx:id="btnEditMovies" onAction="#navigateToEditMovies" text="Edit Movies" visible="false" />
            <Button fx:id="btnLogin" onAction="#navigateToLogin" text="Login" />
            <Button fx:id="btnRegister" onAction="#navigateToRegister" text="Register" />
            <Region HBox.hgrow="ALWAYS" />  <!-- This Region will push the logout button to the right -->
            <Button fx:id="btnLogout" onAction="#logout" text="Logout" visible="false" />
        </HBox>
    </children>
</AnchorPane>
